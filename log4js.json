{
	"appenders": [
		{
			"type": "console",
			"layout": {
				"type": "pattern",
				"pattern": "%[%r %c -%] %m"
			}
		}, {
			"type": "dateFile",
		    "filename": "logs/server.log",
		    "pattern": "-dd",
		    "alwaysIncludePattern": false,
			"category": "[all]"
		}, {
			"type": "file",
			"filename": "logs/dependencyControl.log",
			"category": "@dr-core/browserify-builder",
			"maxLogSize": 512000,
			"numBackups": 1
		}
	],
	"levels": {
		"[all]": "info",
		"test": "DEBUG",
		"rwPackageJson": "info",
		"@dr-core/browserify-builder": "info",
		"packageInstallMgr": "INFO",
		"require-injector.node-inject": "info",
		"gulp.watchPackages": "debug",
		"@dr/translate-generator": "info"
	}
}
